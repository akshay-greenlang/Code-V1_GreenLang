# MANIFEST.in - Controls what files are included in source distributions

# Include important project files
include LICENSE
include README.md
include CHANGELOG.md
include VERSION
include pyproject.toml
include setup.py
include requirements*.txt
include requirements*.in

# Include package data
recursive-include greenlang *.yaml *.yml *.json *.jinja *.md
recursive-include greenlang/schemas *.json
recursive-include greenlang/data *
recursive-include greenlang/configs *.yaml
recursive-include greenlang/templates *
recursive-include greenlang/cli/templates *

# Include core package data
recursive-include core *.yaml *.yml *.json *.md
recursive-include core/greenlang/schemas *.json
recursive-include core/greenlang/data *
recursive-include core/greenlang/configs *.yaml
recursive-include core/greenlang/policy/bundles *

# Include agent templates
recursive-include agents *.py *.md *.yaml

# Include datasets (for source distribution only)
recursive-include datasets *.json *.csv *.md
recursive-exclude datasets/knowledge_base/vector_store *

# Include workflow templates
recursive-include workflows *.yaml

# Include type stubs
recursive-include greenlang *.pyi
recursive-include core *.pyi

# Include shell scripts for CLI
recursive-include greenlang *.sh *.bat *.ps1
recursive-include scripts *.sh *.bat *.ps1

# Exclude unnecessary files from distribution
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude *.swp
global-exclude .DS_Store
global-exclude .gitignore
global-exclude .git*

# Exclude test files from wheel (but include in sdist)
prune tests
prune */tests
prune */test_*

# Exclude documentation from wheel
prune docs
prune */docs

# Exclude development files
prune .github
prune .vscode
prune .idea
exclude .pre-commit-config.yaml
exclude .flake8
exclude .mypy.ini
exclude tox.ini
exclude pytest.ini
exclude .coveragerc
exclude .readthedocs.yml

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune .eggs
prune .tox
prune .coverage*
prune htmlcov
prune .pytest_cache
prune .ruff_cache
prune .mypy_cache

# Exclude temporary and cache files
global-exclude .cache
global-exclude .tmp
global-exclude *.log
global-exclude *.bak
global-exclude *.orig