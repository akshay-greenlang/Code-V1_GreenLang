# GreenLang Environment Variables
# Copy this file to .env and add your actual API keys

# OpenAI API Key for AI Assistant features (OPTIONAL)
# Note: The AI Assistant feature is completely optional. GreenLang works fully without it.
# - Without API key: All core calculations, emissions analysis, and reports work normally
# - With API key: Enables natural language queries via 'greenlang ask' command
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Set region for emission factors (US, EU, UK)
GREENLANG_REGION=US

# Optional: Set default report format (text, json, markdown)
GREENLANG_REPORT_FORMAT=text

# ============================================================================
# JWT Authentication Configuration - CRITICAL SECURITY SETTINGS
# ============================================================================

# JWT Secret Key - REQUIRED for production
# SECURITY: Generate a strong random secret (minimum 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_SECRET_MIN_32_CHARS

# JWT Algorithm - Default: HS256 (HMAC with SHA-256)
# Supported: HS256, HS384, HS512 (HMAC), RS256, RS384, RS512 (RSA), ES256, ES384, ES512 (ECDSA)
JWT_ALGORITHM=HS256

# JWT Issuer - Token issuer claim (iss)
# Set to your domain or service name
JWT_ISSUER=greenlang.ai

# JWT Audience - Token audience claim (aud)
# Set to your API identifier
JWT_AUDIENCE=greenlang-api

# JWT Access Token Expiration (seconds)
# Default: 3600 seconds (1 hour)
JWT_ACCESS_TOKEN_EXPIRE=3600

# JWT Refresh Token Expiration (seconds)
# Default: 604800 seconds (7 days)
JWT_REFRESH_TOKEN_EXPIRE=604800

# JWT Clock Skew Leeway (seconds)
# Tolerance for expiration validation to handle clock skew
# Default: 0 (no tolerance)
JWT_LEEWAY=0