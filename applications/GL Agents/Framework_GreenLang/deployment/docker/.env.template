# =============================================================================
# GreenLang Agent Docker Environment Template
# Template Version: 1.0.0
# =============================================================================
#
# Copy this file to .env and customize values for your agent
#
# Usage:
#   cp .env.template .env
#   # Edit .env with your values
#   docker-compose up -d
#
# =============================================================================

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_ID=gl-xxx
AGENT_NAME=AgentName
VERSION=1.0.0

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Application Ports
# -----------------------------------------------------------------------------
APP_PORT=8000
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=greenlang
DB_USER=greenlang
DB_PASSWORD=greenlang

# Full connection URL (built from above)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis
REDIS_DB=0

# Full connection URL (built from above)
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# -----------------------------------------------------------------------------
# Build Arguments
# -----------------------------------------------------------------------------
PYTHON_VERSION=3.11
BUILD_DATE=
VCS_REF=

# -----------------------------------------------------------------------------
# Monitoring (Grafana)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# -----------------------------------------------------------------------------
# Development Tools (pgAdmin)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@greenlang.io
PGADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# OpenTelemetry
# -----------------------------------------------------------------------------
OTEL_ENABLED=true
OTEL_SERVICE_NAME=${AGENT_ID}
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_METRICS_ENABLED=true
FEATURE_TRACING_ENABLED=true
FEATURE_PROFILING_ENABLED=false
FEATURE_DEBUG_ENDPOINTS=true

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_RATE_LIMIT=100
API_RATE_LIMIT_BURST=20
API_TIMEOUT=30

# -----------------------------------------------------------------------------
# Security (NEVER commit real secrets!)
# -----------------------------------------------------------------------------
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here
# ENCRYPTION_KEY=your-encryption-key-here
