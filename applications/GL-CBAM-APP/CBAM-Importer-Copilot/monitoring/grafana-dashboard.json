{
  "dashboard": {
    "id": null,
    "uid": "cbam-importer-dashboard",
    "title": "CBAM Importer Copilot - Production Dashboard",
    "tags": ["cbam", "production", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "7d", "30d"]
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "links": [],
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "System Health & Overview",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1},
        "collapsed": false
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Pipeline Success Rate",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 0, "y": 1, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(cbam_pipeline_executions_total{status=\"success\"}[5m])) / sum(rate(cbam_pipeline_executions_total[5m])) * 100",
            "refId": "A",
            "legendFormat": "Success Rate"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Active Pipelines",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 6, "y": 1, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "cbam_pipeline_active",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Total Emissions Calculated (Last 24h)",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 12, "y": 1, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(cbam_emissions_calculated_tco2[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            },
            "custom": {
              "displayName": "tCO2"
            }
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Records Processed (Last Hour)",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 18, "y": 1, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(cbam_records_processed_total{status=\"success\"}[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "type": "row",
        "title": "Pipeline Performance",
        "gridPos": {"x": 0, "y": 5, "w": 24, "h": 1},
        "collapsed": false
      },
      {
        "id": 7,
        "type": "graph",
        "title": "Pipeline Duration by Stage",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(cbam_pipeline_duration_seconds_bucket[5m])) by (le, stage))",
            "refId": "A",
            "legendFormat": "p50 - {{stage}}"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(cbam_pipeline_duration_seconds_bucket[5m])) by (le, stage))",
            "refId": "B",
            "legendFormat": "p95 - {{stage}}"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(cbam_pipeline_duration_seconds_bucket[5m])) by (le, stage))",
            "refId": "C",
            "legendFormat": "p99 - {{stage}}"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "max": true,
          "min": true,
          "rightSide": false
        }
      },
      {
        "id": 8,
        "type": "graph",
        "title": "Pipeline Execution Rate",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(cbam_pipeline_executions_total{status=\"success\"}[5m]))",
            "refId": "A",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(rate(cbam_pipeline_executions_total{status=\"failed\"}[5m]))",
            "refId": "B",
            "legendFormat": "Failed"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Executions/sec"
          }
        ]
      },
      {
        "id": 9,
        "type": "row",
        "title": "Agent Performance",
        "gridPos": {"x": 0, "y": 14, "w": 24, "h": 1},
        "collapsed": false
      },
      {
        "id": 10,
        "type": "graph",
        "title": "Agent Execution Duration",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 0, "y": 15, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(cbam_agent_duration_seconds_bucket[5m])) by (le, agent))",
            "refId": "A",
            "legendFormat": "p95 - {{agent}}"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 11,
        "type": "graph",
        "title": "Agent Processing Speed (ms/record)",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 12, "y": 15, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "cbam_agent_ms_per_record{quantile=\"0.5\"}",
            "refId": "A",
            "legendFormat": "p50 - {{agent}}"
          },
          {
            "expr": "cbam_agent_ms_per_record{quantile=\"0.95\"}",
            "refId": "B",
            "legendFormat": "p95 - {{agent}}"
          }
        ],
        "yaxes": [
          {
            "format": "ms",
            "label": "Milliseconds per Record"
          }
        ]
      },
      {
        "id": 12,
        "type": "row",
        "title": "Validation & Errors",
        "gridPos": {"x": 0, "y": 23, "w": 24, "h": 1},
        "collapsed": false
      },
      {
        "id": 13,
        "type": "piechart",
        "title": "Validation Results Distribution",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 0, "y": 24, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (result) (increase(cbam_validation_results_total[1h]))",
            "refId": "A",
            "legendFormat": "{{result}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        }
      },
      {
        "id": 14,
        "type": "graph",
        "title": "Errors by Type",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 8, "y": 24, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (error_type) (rate(cbam_errors_total[5m]))",
            "refId": "A",
            "legendFormat": "{{error_type}}"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          }
        ]
      },
      {
        "id": 15,
        "type": "graph",
        "title": "Exceptions by Type",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 16, "y": 24, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (exception_type) (rate(cbam_exceptions_total[5m]))",
            "refId": "A",
            "legendFormat": "{{exception_type}}"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Exceptions/sec"
          }
        ]
      },
      {
        "id": 16,
        "type": "row",
        "title": "Business Metrics",
        "gridPos": {"x": 0, "y": 32, "w": 24, "h": 1},
        "collapsed": false
      },
      {
        "id": 17,
        "type": "graph",
        "title": "Emissions Calculation Rate",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 0, "y": 33, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(cbam_emissions_calculated_tco2[5m])",
            "refId": "A",
            "legendFormat": "tCO2/sec"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "tCO2/sec"
          }
        ]
      },
      {
        "id": 18,
        "type": "piechart",
        "title": "Calculation Method Distribution",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 12, "y": 33, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (method) (increase(cbam_calculation_method_total[24h]))",
            "refId": "A",
            "legendFormat": "{{method}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 19,
        "type": "row",
        "title": "System Resources",
        "gridPos": {"x": 0, "y": 41, "w": 24, "h": 1},
        "collapsed": false
      },
      {
        "id": 20,
        "type": "graph",
        "title": "Memory Usage",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 0, "y": 42, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "cbam_memory_usage_bytes / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Memory (MB)"
          }
        ],
        "yaxes": [
          {
            "format": "decmbytes",
            "label": "Memory"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [500],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Memory Usage Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 21,
        "type": "graph",
        "title": "CPU Usage",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 8, "y": 42, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "cbam_cpu_usage_percent",
            "refId": "A",
            "legendFormat": "CPU %"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU",
            "max": 100,
            "min": 0
          }
        ]
      },
      {
        "id": 22,
        "type": "stat",
        "title": "Application Info",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "gridPos": {"x": 16, "y": 42, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "cbam_application_info",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "name"
        },
        "transformations": [
          {
            "id": "labelsToFields",
            "options": {}
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "DS_PROMETHEUS",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "instance",
          "type": "query",
          "datasource": "${DS_PROMETHEUS}",
          "query": "label_values(cbam_pipeline_executions_total, instance)",
          "refresh": 1,
          "multi": false,
          "includeAll": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "enable": true,
          "expr": "changes(cbam_application_info[5m]) > 0",
          "name": "Deployments",
          "tagKeys": "version",
          "textFormat": "New deployment: {{version}}",
          "titleFormat": "Deployment"
        }
      ]
    }
  },
  "overwrite": true,
  "message": "CBAM Importer Copilot Production Dashboard v1.0.0"
}
