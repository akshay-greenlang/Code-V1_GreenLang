            "refId": "B"
          },
          {
            "expr": "water_treatment_chemical_dosing_efficiency_percent{boiler_id=~\"$boiler_id\", facility=\"$facility\", chemical=\"polymer\"}",
            "legendFormat": "{{boiler_id}} - Polymer",
