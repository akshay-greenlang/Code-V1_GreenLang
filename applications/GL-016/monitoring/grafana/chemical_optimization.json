{
  "dashboard": {
    "title": "GL-016 WATERGUARD - Chemical Optimization",
    "uid": "waterguard-chemical-optimization",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5m",
    "editable": true,
    "tags": ["waterguard", "gl-016", "chemical-optimization", "cost-tracking"],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "boiler_id",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(water_treatment_chemical_consumption_gallons, boiler_id)",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "refresh": 1,
          "sort": 1
        },
        {
          "name": "facility",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(water_treatment_chemical_consumption_gallons, facility)",
          "multi": false,
          "includeAll": false,
          "current": {
            "text": "",
            "value": ""
          },
          "refresh": 1,
          "sort": 1
        },
        {
          "name": "timerange",
          "type": "custom",
          "options": [
            {
              "value": "1h",
              "text": "Last Hour"
            },
            {
              "value": "24h",
              "text": "Last 24 Hours"
            },
            {
              "value": "7d",
              "text": "Last 7 Days"
            },
            {
              "value": "30d",
              "text": "Last 30 Days"
            }
          ],
          "current": {
            "text": "Last 24 Hours",
            "value": "24h"
          }
        }
      ]
    },
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5m", "15m", "30m", "1h", "6h", "12h"]
    },
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "Chemical Consumption Overview",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "collapsed": false
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Chemical Consumption Trends",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 1
        },
        "targets": [
          {
            "expr": "rate(water_treatment_chemical_consumption_gallons{boiler_id=~\"$boiler_id\", facility=\"$facility\", chemical=\"phosphate\"}[$timerange])",
            "legendFormat": "{{boiler_id}} - Phosphate",
            "refId": "A"
          },
          {
            "expr": "rate(water_treatment_chemical_consumption_gallons{boiler_id=~\"$boiler_id\", facility=\"$facility\", chemical=\"sulfite\"}[$timerange])",
            "legendFormat": "{{boiler_id}} - Sulfite",
            "refId": "B"
          },
          {
            "expr": "rate(water_treatment_chemical_consumption_gallons{boiler_id=~\"$boiler_id\", facility=\"$facility\", chemical=\"polymer\"}[$timerange])",
            "legendFormat": "{{boiler_id}} - Polymer",
            "refId": "C"
          },
          {
            "expr": "rate(water_treatment_chemical_consumption_gallons{boiler_id=~\"$boiler_id\", facility=\"$facility\", chemical=\"caustic\"}[$timerange])",
            "legendFormat": "{{boiler_id}} - Caustic",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisCenteredZero": false,
              "axisColorMode": "text",
              "axisLabel": "Gallons/Hour",
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "gradientMode": "none",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "never",
              "spanNulls": true
            },
            "unit": "gal/h"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true,
            "calcs": ["mean", "max", "lastNotNull"]
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 3,
        "type": "row",
        "title": "Cost Analysis",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 11
        },
        "collapsed": false
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Total Chemical Cost (Period)",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum(increase(water_treatment_chemical_cost_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}[$timerange]))",
            "legendFormat": "Total Cost",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Cost per 1000 lb Steam",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 12
        },
        "targets": [
          {
            "expr": "avg(water_treatment_chemical_cost_per_1000lb_steam_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"})",
            "legendFormat": "Cost/1000lb",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "currencyUSD",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1.0
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Cost Reduction vs Baseline",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "100 * (1 - (sum(increase(water_treatment_chemical_cost_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}[$timerange])) / sum(increase(water_treatment_chemical_cost_baseline_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}[$timerange]))))",
            "legendFormat": "Cost Reduction %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "green",
                  "value": 10
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Total Savings (Period)",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum(increase(water_treatment_chemical_cost_baseline_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}[$timerange])) - sum(increase(water_treatment_chemical_cost_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}[$timerange]))",
            "legendFormat": "Savings",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Cost per Unit Steam Trend",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 18
        },
        "targets": [
          {
            "expr": "water_treatment_chemical_cost_per_1000lb_steam_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "{{boiler_id}} - Cost/1000lb Steam",
            "refId": "A"
          },
          {
            "expr": "water_treatment_chemical_cost_per_1000lb_steam_baseline_usd{boiler_id=~\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "{{boiler_id}} - Baseline",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "USD per 1000 lb steam",
              "fillOpacity": 10,
              "lineInterpolation": "smooth",
              "lineWidth": 2
            },
            "unit": "currencyUSD"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Baseline.*"
              },
              "properties": [
                {
                  "id": "custom.lineStyle",
                  "value": {
                    "dash": [10, 10],
                    "fill": "dash"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "type": "row",
        "title": "Dosing Efficiency",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 27
        },
        "collapsed": false
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "Chemical Dosing Efficiency",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "water_treatment_chemical_dosing_efficiency_percent{boiler_id=~\"$boiler_id\", facility=\"$facility\", chemical=\"phosphate\"}",
            "legendFormat": "{{boiler_id}} - Phosphate",
