        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 38
        },
        "targets": [
          {
            "expr": "water_treatment_chemical_tank_level_percent{boiler_id=~\"$boiler_id\", facility=\"$facility\"}",
