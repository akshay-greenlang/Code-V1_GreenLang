      },
      {
        "id": 14,
        "type": "table",
        "title": "Tank Inventory Details",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 38
        },
        "targets": [
          {
            "expr": "water_treatment_chemical_tank_level_gallons{boiler_id=~\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "{{boiler_id}} - {{chemical}}",
            "refId": "A",
            "instant": true,
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          },
          "overrides": []
        },
        "options": {
          "showHeader": true,
          "sortBy": []
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {},
              "renameByName": {
                "boiler_id": "Boiler",
                "chemical": "Chemical",
                "Value": "Level (gal)"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Level (gal)",
                  "desc": false
                }
              ]
            }
          }
        ]
      },
      {
        "id": 15,
