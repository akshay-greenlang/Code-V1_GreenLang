              "lineWidth": 2
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "green",
                  "value": 85
                }
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true,
            "calcs": ["mean", "lastNotNull"]
          }
        }
      },
      {
        "id": 11,
        "type": "gauge",
        "title": "Average Dosing Efficiency",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 28
        },
        "targets": [
          {
            "expr": "avg(water_treatment_chemical_dosing_efficiency_percent{boiler_id=~\"$boiler_id\", facility=\"$facility\"}) by (chemical)",
            "legendFormat": "{{chemical}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "green",
                  "value": 85
                }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 12,
        "type": "row",
        "title": "Tank Inventory Management",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 37
        },
        "collapsed": false
      },
