{
  "dashboard": {
    "title": "GL-016 WATERGUARD - Comprehensive Overview",
    "uid": "waterguard-overview",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "editable": true,
    "tags": ["waterguard", "gl-016", "water-treatment", "boiler"],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "boiler_id",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(water_treatment_ph_value, boiler_id)",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "refresh": 1,
          "sort": 1
        },
        {
          "name": "facility",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(water_treatment_ph_value, facility)",
          "multi": false,
          "includeAll": false,
          "current": {
            "text": "",
            "value": ""
          },
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
