      {
        "id": 2,
        "type": "timeseries",
        "title": "pH Trending with Control Limits",
        "datasource": "${datasource}",
        "gridPos": {
          "h": 10,
          "w": 18,
          "x": 0,
          "y": 1
        },
        "targets": [
          {
            "expr": "water_treatment_ph_value{boiler_id=\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "pH Actual",
            "refId": "A"
          },
          {
            "expr": "water_treatment_ph_setpoint{boiler_id=\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "pH Setpoint",
            "refId": "B"
          },
          {
            "expr": "water_treatment_ph_upper_limit{boiler_id=\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "pH Upper Limit",
            "refId": "C"
          },
          {
            "expr": "water_treatment_ph_lower_limit{boiler_id=\"$boiler_id\", facility=\"$facility\"}",
            "legendFormat": "pH Lower Limit",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisCenteredZero": false,
              "axisColorMode": "text",
              "axisLabel": "pH",
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "gradientMode": "none",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "never",
              "spanNulls": 300000
            },
            "unit": "none",
            "min": 9,
            "max": 12.5
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "pH Upper Limit"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "red",
                    "mode": "fixed"
                  }
                },
                {
                  "id": "custom.lineStyle",
                  "value": {
                    "dash": [10, 10],
                    "fill": "dash"
                  }
                },
                {
                  "id": "custom.lineWidth",
                  "value": 1
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "pH Lower Limit"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "red",
                    "mode": "fixed"
