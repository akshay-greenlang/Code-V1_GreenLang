{
  "dashboard": {
    "title": "GL-016 WATERGUARD - Water Chemistry Trends",
    "uid": "waterguard-chemistry",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "editable": true,
    "tags": ["waterguard", "gl-016", "water-chemistry", "trends"],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "boiler_id",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(water_treatment_ph_value, boiler_id)",
          "multi": false,
          "includeAll": false,
          "current": {
            "text": "",
            "value": ""
          },
          "refresh": 1,
          "sort": 1
        },
        {
          "name": "facility",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(water_treatment_ph_value{boiler_id=\"$boiler_id\"}, facility)",
          "multi": false,
          "includeAll": false,
          "current": {
            "text": "",
            "value": ""
          },
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h", "2h"]
    },
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "pH Monitoring",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
