{
  "dashboard": {
    "id": null,
    "uid": "gl008-energy-analytics",
    "title": "GL-008 Energy Loss Analytics",
    "tags": ["gl-008", "steam-traps", "energy", "cost-savings", "sustainability"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h", "2h"]
    },
    "templating": {
      "list": [
        {
          "name": "facility",
          "type": "query",
          "query": "label_values(gl008_total_energy_loss_kw, facility)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        },
        {
          "name": "failure_mode",
          "type": "query",
          "query": "label_values(gl008_energy_loss_kw{facility=~\"$facility\"}, failure_mode)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Maintenance Events",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "green",
          "tags": ["maintenance", "repair"]
        },
        {
          "name": "Critical Failures",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "red",
          "tags": ["failure", "critical"]
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Energy Loss (kW)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(gl008_total_energy_loss_kw{facility=~\"$facility\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kwatt",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "orange"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 2,
        "title": "Annual Cost Impact (USD/year)",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(gl008_total_cost_impact_usd_per_year{facility=~\"$facility\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50000, "color": "yellow"},
                {"value": 200000, "color": "orange"},
                {"value": 500000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "title": "Total Steam Loss (kg/hr)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(gl008_total_steam_loss_kg_hr{facility=~\"$facility\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kg/h",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 2000, "color": "orange"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "title": "CO2 Emissions (kg CO2/hr)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(gl008_co2_emissions_kg_per_hour{facility=~\"$facility\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kg/h",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "orange"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 5,
        "title": "Energy Loss Trend (7d)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(gl008_total_energy_loss_kw{facility=~\"$facility\"})",
            "legendFormat": "Total Energy Loss",
            "refId": "A"
          },
          {
            "expr": "sum by (facility) (gl008_total_energy_loss_kw{facility=~\"$facility\"})",
            "legendFormat": "{{facility}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Energy Loss (kW)",
            "format": "kwatt"
          },
          {
            "format": "short",
            "show": false
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Cost Impact Trend (7d)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(gl008_total_cost_impact_usd_per_year{facility=~\"$facility\"})",
            "legendFormat": "Total Annual Cost Impact",
            "refId": "A"
          },
          {
            "expr": "sum by (facility) (gl008_total_cost_impact_usd_per_year{facility=~\"$facility\"})",
            "legendFormat": "{{facility}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Cost Impact (USD/year)",
            "format": "currencyUSD"
          },
          {
            "format": "short",
            "show": false
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Energy Loss by Failure Mode",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (failure_mode) (gl008_energy_loss_kw{facility=~\"$facility\", failure_mode=~\"$failure_mode\"})",
            "legendFormat": "{{failure_mode}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kwatt",
            "decimals": 1
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 8,
        "title": "Cost Impact by Failure Mode",
        "type": "bargauge",
        "gridPos": {"x": 12, "y": 14, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (failure_mode) (gl008_cost_impact_usd_per_year{facility=~\"$facility\", failure_mode=~\"$failure_mode\"})",
            "legendFormat": "{{failure_mode}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10000, "color": "yellow"},
                {"value": 50000, "color": "orange"},
                {"value": 100000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 9,
        "title": "Cumulative Energy Wasted (kWh)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(gl008_energy_wasted_kwh_total{facility=~\"$facility\"})",
            "legendFormat": "Total Energy Wasted",
            "refId": "A"
          },
          {
            "expr": "sum by (failure_mode) (gl008_energy_wasted_kwh_total{facility=~\"$facility\"})",
            "legendFormat": "{{failure_mode}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Energy Wasted (kWh)",
            "format": "kwatth"
          },
          {
            "format": "short",
            "show": false
          }
        ]
      },
      {
        "id": 10,
        "title": "Cumulative Steam Wasted (kg)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(gl008_steam_wasted_kg_total{facility=~\"$facility\"})",
            "legendFormat": "Total Steam Wasted",
            "refId": "A"
          },
          {
            "expr": "sum by (failure_mode) (gl008_steam_wasted_kg_total{facility=~\"$facility\"})",
            "legendFormat": "{{failure_mode}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Steam Wasted (kg)",
            "format": "masskg"
          },
          {
            "format": "short",
            "show": false
          }
        ]
      },
      {
        "id": 11,
        "title": "Avoided Costs (USD) - Cumulative",
        "type": "stat",
        "gridPos": {"x": 0, "y": 30, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum(gl008_avoided_costs_usd_total{facility=~\"$facility\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 12,
        "title": "Inspection Program ROI",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 30, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "avg(gl008_inspection_roi{facility=~\"$facility\", time_window=\"annual\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 10,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 13,
        "title": "CO2 Emissions Cumulative (kg)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(gl008_co2_emissions_kg_total{facility=~\"$facility\"})",
            "legendFormat": "Total CO2 Emissions",
            "refId": "A"
          },
          {
            "expr": "sum(gl008_co2_avoided_kg_total{facility=~\"$facility\"})",
            "legendFormat": "CO2 Avoided",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "CO2 (kg)",
            "format": "masskg"
          },
          {
            "format": "short",
            "show": false
          }
        ],
        "seriesOverrides": [
          {
            "alias": "CO2 Avoided",
            "color": "green",
            "yaxis": 1
          },
          {
            "alias": "Total CO2 Emissions",
            "color": "red",
            "yaxis": 1
          }
        ]
      },
      {
        "id": 14,
        "title": "Top 10 Worst Performing Traps (Energy Loss)",
        "type": "table",
        "gridPos": {"x": 12, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, gl008_energy_loss_kw{facility=~\"$facility\"})",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "unit", "value": "kwatt"},
                {"id": "decimals", "value": 2},
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"value": 0, "color": "green"},
                      {"value": 10, "color": "yellow"},
                      {"value": 50, "color": "orange"},
                      {"value": 100, "color": "red"}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "trap_id": "Trap ID",
                "trap_type": "Type",
                "facility": "Facility",
                "failure_mode": "Failure Mode",
                "Value": "Energy Loss (kW)"
              }
            }
          }
        ]
      }
    ]
  }
}
