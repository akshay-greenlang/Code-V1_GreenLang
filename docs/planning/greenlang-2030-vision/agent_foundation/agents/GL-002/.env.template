# GL-002 BoilerEfficiencyOptimizer - Environment Variables Template
# Copy to .env and fill in actual values
# DO NOT commit .env file to version control
# Use environment-specific files: .env.development, .env.staging, .env.production

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

GREENLANG_ENV=production
APP_NAME=GL-002 BoilerEfficiencyOptimizer
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30
API_PREFIX=/api/v1

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================

# JWT Configuration
JWT_SECRET=your-secret-key-here-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Key (for service-to-service auth)
API_KEY=your-api-key-here

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=https://app.greenlang.ai,https://staging.greenlang.ai
CORS_ALLOW_CREDENTIALS=true

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL Connection
DATABASE_URL=postgresql://user:password@localhost:5432/greenlang_boiler
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_OVERFLOW=20
DATABASE_ECHO=false
DATABASE_TIMEOUT=30

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Redis Connection
REDIS_URL=redis://localhost:6379/0
REDIS_DEFAULT_DB=0
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# ==============================================================================
# MONITORING & OBSERVABILITY
# ==============================================================================

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=8001
METRICS_PATH=/api/v1/metrics

# Structured Logging
LOGGING_FORMAT=json
LOGGING_TO_FILE=true
LOG_FILE_PATH=/app/logs/gl-002.log
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Datadog APM (optional)
DATADOG_ENABLED=false
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=datadoghq.com

# ==============================================================================
# BOILER OPTIMIZATION CONFIGURATION
# ==============================================================================

# Default Optimization Strategy
OPTIMIZATION_DEFAULT_STRATEGY=fuel_efficiency
OPTIMIZATION_TIMEOUT_SECONDS=300
MAX_CONCURRENT_OPTIMIZATIONS=10

# Boiler Operating Parameters
BOILER_DEFAULT_EXCESS_AIR_PERCENT=3.0
BOILER_DEFAULT_MIN_LOAD_PERCENT=25.0
BOILER_DEFAULT_MAX_LOAD_PERCENT=100.0

# ==============================================================================
# EMISSIONS COMPLIANCE
# ==============================================================================

# Regulatory Limits
EMISSIONS_NOX_LIMIT_PPM=30
EMISSIONS_CO_LIMIT_PPM=100
EMISSIONS_SO2_LIMIT_PPM=75
EMISSIONS_CO2_INTENSITY_KG_MWH=800
EMISSIONS_MONITORING_INTERVAL_SECONDS=60

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

FEATURE_ECONOMIZER_ANALYSIS=true
FEATURE_FUEL_SWITCHING=true
FEATURE_BLOWDOWN_OPTIMIZATION=true
FEATURE_PREDICTIVE_MAINTENANCE=false

# ==============================================================================
# EXTERNAL INTEGRATIONS
# ==============================================================================

# SCADA/DCS Integration
SCADA_ENABLED=true
SCADA_PROTOCOL=OPC_UA
SCADA_HOST=scada.greenlang.local
SCADA_PORT=4840

# Fuel Management System
FUEL_MANAGEMENT_API_URL=https://fuel-api.greenlang.io
FUEL_MANAGEMENT_API_KEY=your-fuel-api-key

# Emissions Monitoring System
EMISSIONS_MONITORING_BROKER=mqtt.greenlang.io
EMISSIONS_MONITORING_PORT=8883
EMISSIONS_MONITORING_TOPIC=emissions/boiler/+

# GL-001 ProcessHeatOrchestrator
GL_001_API_URL=https://api.process-heat.greenlang.io
GL_001_API_KEY=your-gl-001-api-key

# ==============================================================================
# PERFORMANCE TUNING
# ==============================================================================

BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=100
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# ==============================================================================
# ALERTING & NOTIFICATIONS
# ==============================================================================

# PagerDuty Integration
PAGERDUTY_ENABLED=true
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-pagerduty-service-id

# Slack Integration
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ALERT_CHANNEL=#boiler-alerts

# Email Alerts
EMAIL_ALERTS_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=alerts@greenlang.ai
EMAIL_SMTP_PASSWORD=your-email-password
EMAIL_FROM_ADDRESS=alerts@greenlang.ai
EMAIL_RECIPIENTS=ops@greenlang.ai,sustainability@greenlang.ai

# ==============================================================================
# DEPLOYMENT ENVIRONMENT SPECIFIC
# ==============================================================================

# Development Environment
# GREENLANG_ENV=development
# DEBUG=true
# DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/greenlang_dev
# REDIS_URL=redis://localhost:6379/1
