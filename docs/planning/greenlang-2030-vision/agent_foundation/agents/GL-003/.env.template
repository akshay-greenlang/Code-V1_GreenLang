# GL-003 SteamSystemAnalyzer - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with actual secrets to version control

# ============================================================================
# Application Configuration
# ============================================================================
GREENLANG_ENV=development
APP_NAME=GL-003-SteamSystemAnalyzer
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/greenlang

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# Cache Configuration
# ============================================================================
# Redis connection string
# Format: redis://hostname:port/database
REDIS_URL=redis://localhost:6379/0

# Redis connection pool
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================================================
# AI Model Configuration
# ============================================================================
# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2000

# ============================================================================
# Security Configuration
# ============================================================================
# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API keys
API_KEY=your-api-key-here
API_KEY_HEADER=X-API-Key

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=8001

# Tracing
TRACING_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/gl-003.log

# ============================================================================
# Steam System Specific Configuration
# ============================================================================
# Analysis parameters
STEAM_ANALYSIS_INTERVAL=300
PRESSURE_THRESHOLD_PSI=150
TEMPERATURE_THRESHOLD_F=350
EFFICIENCY_TARGET_PERCENT=85

# Alert thresholds
ALERT_PRESSURE_HIGH_PSI=175
ALERT_PRESSURE_LOW_PSI=100
ALERT_TEMPERATURE_HIGH_F=400
ALERT_TEMPERATURE_LOW_F=300

# ============================================================================
# Performance & Scaling
# ============================================================================
WORKER_COUNT=4
MAX_CONNECTIONS=1000
TIMEOUT_SECONDS=30
RATE_LIMIT_PER_MINUTE=100

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_PROFILING=false
ENABLE_DEBUG_MODE=false
ENABLE_EXPERIMENTAL_FEATURES=false

# ============================================================================
# External Services
# ============================================================================
# Webhook endpoints
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
WEBHOOK_SECRET=your-webhook-secret

# Notification services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your-pagerduty-api-key

# ============================================================================
# Deployment Information
# ============================================================================
POD_NAME=${POD_NAME}
POD_NAMESPACE=${POD_NAMESPACE}
NODE_NAME=${NODE_NAME}
