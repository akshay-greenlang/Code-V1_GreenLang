  "epa_nsps": {
    "description": "EPA New Source Performance Standards",
    "reference": "40 CFR Part 60",
    "subparts": {
      "subpart_da": {
        "description": "Electric Utility Steam Generating Units (>250 MMBtu/hr)",
        "applicability": "Units >250 MMBtu/hr heat input",
        "nox": {
          "limit_lb_mmbtu": 0.10,
          "averaging_period_hours": 30,
          "compliance_method": "30-day rolling average"
        },
        "sox": {
          "limit_lb_mmbtu": 0.15,
          "percent_reduction": 90.0,
          "compliance_method": "lb/MMBtu OR percent reduction"
        },
        "pm": {
          "limit_lb_mmbtu": 0.03,
          "opacity_percent": 20.0,
          "compliance_method": "lb/MMBtu AND opacity"
        }
      },
      "subpart_db": {
        "description": "Industrial-Commercial-Institutional Steam Generating Units (>100 MMBtu/hr)",
        "applicability": "Units >100 MMBtu/hr heat input",
        "nox": {
          "natural_gas_limit_lb_mmbtu": 0.20,
          "fuel_oil_limit_lb_mmbtu": 0.30,
          "coal_limit_lb_mmbtu": 0.50,
          "averaging_period_hours": 30
        },
        "sox": {
          "limit_lb_mmbtu": 0.20,
          "percent_reduction": 90.0
        },
        "pm": {
          "limit_lb_mmbtu": 0.05,
          "opacity_percent": 20.0
        }
      },
      "subpart_dc": {
        "description": "Small Industrial-Commercial-Institutional Steam Generating Units (10-100 MMBtu/hr)",
        "applicability": "Units 10-100 MMBtu/hr heat input",
        "sox": {
          "natural_gas_exempt": true,
          "fuel_oil_limit_lb_mmbtu": 0.50,
          "coal_limit_lb_mmbtu": 1.20
        }
      },
      "subpart_gg": {
        "description": "Stationary Gas Turbines",
        "applicability": "Gas turbines >10 MW",
        "nox": {
          "limit_ppmvd_15_o2": 25.0,
          "limit_lb_mmbtu": 0.15,
          "averaging_period_hours": 4
        },
        "sox": {
          "limit_percent_sulfur_fuel": 0.80
        }
      },
      "subpart_kkkk": {
        "description": "Stationary Combustion Turbines (Post-2006)",
        "applicability": "Turbines constructed after Feb 2006",
        "nox": {
          "limit_ppmvd_15_o2_new": 15.0,
          "limit_ppmvd_15_o2_modified": 42.0,
          "averaging_period_hours": 4
        }
      }
    }
