# GL-004 BurnerOptimizationAgent - Environment Variables Template
# Copy to .env and fill with actual values
# NEVER commit .env files with secrets to version control

# ============================================================================
# Application Configuration
# ============================================================================
GREENLANG_ENV=development
APP_NAME=GL-004-BurnerOptimizationAgent
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/greenlang
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# Cache Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5
CACHE_TTL=3600

# ============================================================================
# Security Configuration
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=your-api-key-here

# ============================================================================
# Monitoring & Observability
# ============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=8001
TRACING_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_FORMAT=json

# ============================================================================
# Burner Controller Configuration
# ============================================================================
BURNER_CONTROLLER_HOST=burner-controller.local
BURNER_CONTROLLER_PORT=502
BURNER_CONTROLLER_PROTOCOL=modbus_tcp
BURNER_CONTROLLER_TYPE=honeywell_burnerlogix

# ============================================================================
# Sensor Configuration
# ============================================================================
# O2 Analyzer
O2_ANALYZER_HOST=o2-analyzer.local
O2_ANALYZER_PORT=502
O2_ANALYZER_TYPE=zirconia

# Emissions Monitor (CEMS)
EMISSIONS_MONITOR_HOST=cems.local
EMISSIONS_MONITOR_PORT=502
EMISSIONS_MONITOR_PROTOCOL=modbus_tcp

# Flame Scanner
FLAME_SCANNER_HOST=flame-scanner.local
FLAME_SCANNER_PORT=502
FLAME_SCANNER_TYPE=uv

# ============================================================================
# SCADA/DCS Integration
# ============================================================================
SCADA_OPC_UA_ENDPOINT=opc.tcp://scada.local:4840
MQTT_BROKER_URL=mqtt://mqtt.local:1883
MQTT_TOPIC_PREFIX=greenlang/gl-004

# ============================================================================
# Fuel Configuration
# ============================================================================
FUEL_TYPE=natural_gas
FUEL_LHV_MJ_PER_KG=50.0
FUEL_HHV_MJ_PER_KG=55.5
FUEL_COST_PER_KG=0.30

# ============================================================================
# Burner Operating Parameters
# ============================================================================
BURNER_MAX_CAPACITY=10000.0
MIN_FUEL_FLOW=50.0
MAX_FUEL_FLOW=1000.0
MIN_AIR_FLOW=500.0
MAX_AIR_FLOW=15000.0

# ============================================================================
# Optimization Parameters
# ============================================================================
TARGET_EFFICIENCY_PERCENT=90.0
MIN_EXCESS_AIR_PERCENT=5.0
MAX_EXCESS_AIR_PERCENT=30.0
TARGET_O2_PERCENT=3.0

# ============================================================================
# Emissions Limits
# ============================================================================
MAX_NOX_PPM=50.0
MAX_CO_PPM=100.0
MAX_SO2_PPM=20.0

# ============================================================================
# Safety Limits
# ============================================================================
MAX_FLAME_TEMPERATURE_C=1800.0
MAX_FURNACE_TEMPERATURE_C=1400.0
MAX_FLUE_GAS_TEMPERATURE_C=400.0

# ============================================================================
# Timing Parameters
# ============================================================================
OPTIMIZATION_INTERVAL_SECONDS=300
VALIDATION_DURATION_SECONDS=300
ERROR_RETRY_DELAY_SECONDS=60

# ============================================================================
# Deployment Information
# ============================================================================
POD_NAME=${POD_NAME}
POD_NAMESPACE=${POD_NAMESPACE}
NODE_NAME=${NODE_NAME}
