# GL-005 CombustionControlAgent Test Environment Variables
# Copy to .env and configure for local testing

# ============================================================================
# DCS (Distributed Control System) Settings
# ============================================================================
TEST_DCS_ENABLED=true
TEST_DCS_OPC_UA_SERVER=opc.tcp://localhost:4840
TEST_DCS_USERNAME=test_user
TEST_DCS_PASSWORD=test_password
TEST_DCS_NAMESPACE=urn:test:dcs
TEST_DCS_TIMEOUT_MS=5000

# ============================================================================
# PLC (Programmable Logic Controller) Settings
# ============================================================================
TEST_PLC_ENABLED=true
TEST_PLC_MODBUS_HOST=localhost
TEST_PLC_MODBUS_PORT=502
TEST_PLC_UNIT_ID=1
TEST_PLC_TIMEOUT_MS=3000

# ============================================================================
# Combustion Analyzer Settings
# ============================================================================
TEST_ANALYZER_ENABLED=true
TEST_ANALYZER_MQTT_BROKER=localhost
TEST_ANALYZER_MQTT_PORT=1883
TEST_ANALYZER_MQTT_USERNAME=analyzer
TEST_ANALYZER_MQTT_PASSWORD=analyzer_pass
TEST_ANALYZER_MQTT_TOPIC=combustion/analyzer/+

# ============================================================================
# Flame Scanner Settings
# ============================================================================
TEST_FLAME_SCANNER_ENABLED=true
TEST_FLAME_SCANNER_IP=192.168.1.100
TEST_FLAME_SCANNER_PORT=8080
TEST_FLAME_SCANNER_API_KEY=test-flame-scanner-key

# ============================================================================
# Database Settings
# ============================================================================
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/gl005_test
TEST_DATABASE_POOL_SIZE=5
TEST_DATABASE_MAX_OVERFLOW=10

# ============================================================================
# Control Parameters
# ============================================================================
TEST_CONTROL_LOOP_INTERVAL_MS=100
TEST_SAFETY_CHECK_INTERVAL_MS=50
TEST_MAX_TEMP_CELSIUS=1400
TEST_MIN_TEMP_CELSIUS=800
TEST_MAX_PRESSURE_BAR=15
TEST_MIN_PRESSURE_BAR=5
TEST_MAX_FUEL_FLOW_KG_HR=1000
TEST_MIN_FUEL_FLOW_KG_HR=50

# ============================================================================
# Performance Settings
# ============================================================================
TEST_ENABLE_PERFORMANCE_TESTS=true
TEST_CONCURRENT_CYCLES=100
TEST_LOAD_TEST_DURATION_SEC=10
TEST_MEMORY_LIMIT_MB=512

# ============================================================================
# Safety Settings
# ============================================================================
TEST_ENABLE_SAFETY_INTERLOCKS=true
TEST_EMERGENCY_SHUTDOWN_TIMEOUT_MS=1000
TEST_SAFETY_OVERRIDE_ALLOWED=false

# ============================================================================
# Determinism Settings
# ============================================================================
TEST_ENABLE_DETERMINISM_VALIDATION=true
TEST_DETERMINISM_RUNS=10
TEST_HASH_ALGORITHM=sha256

# ============================================================================
# Logging Settings
# ============================================================================
TEST_LOG_LEVEL=DEBUG
TEST_LOG_FILE=tests/logs/gl005_tests.log
TEST_ENABLE_METRICS=true

# ============================================================================
# Mock Server Settings
# ============================================================================
TEST_MOCK_DCS_PORT=4840
TEST_MOCK_PLC_PORT=5502
TEST_MOCK_MQTT_PORT=1884
TEST_MOCK_SERVER_DELAY_MS=10
