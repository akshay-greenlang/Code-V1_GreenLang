# Base Dockerfile for GreenLang AI Agents
# Multi-stage build for optimized image size and security

# Stage 1: Python builder with dependencies
FROM python:3.10-slim as python-builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    libxml2-dev \
    libxslt1-dev \
    libblas-dev \
    liblapack-dev \
    libpq-dev \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip and install build tools
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Copy requirements files
COPY requirements/base.txt /tmp/requirements.txt
COPY requirements/agents.txt /tmp/requirements-agents.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r /tmp/requirements.txt && \
    pip install --no-cache-dir -r /tmp/requirements-agents.txt

# Stage 2: CUDA builder for GPU support (optional)
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04 as cuda-builder

# Install Python and minimal dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3.10-venv \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from python-builder
COPY --from=python-builder /opt/venv /opt/venv

# Stage 3: Final runtime image
FROM python:3.10-slim as runtime

# Install runtime dependencies only
RUN apt-get update && apt-get install -y \
    libpq5 \
    libxml2 \
    libgomp1 \
    curl \
    wget \
    ca-certificates \
    tini \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=python-builder /opt/venv /opt/venv

# Set environment variables
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONIOENCODING=utf-8 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Create non-root user for security
RUN groupadd -r greenlang && \
    useradd -r -g greenlang -u 1000 -m -s /bin/bash greenlang && \
    mkdir -p /app /app/data /app/logs /app/models && \
    chown -R greenlang:greenlang /app

# Set working directory
WORKDIR /app

# Copy application code
COPY --chown=greenlang:greenlang ./src /app/src
COPY --chown=greenlang:greenlang ./configs /app/configs
COPY --chown=greenlang:greenlang ./scripts /app/scripts

# Install additional runtime tools
RUN pip install --no-cache-dir \
    prometheus-client==0.19.0 \
    opentelemetry-api==1.21.0 \
    opentelemetry-sdk==1.21.0 \
    opentelemetry-instrumentation==0.42b0

# Switch to non-root user
USER greenlang

# Add health check script
COPY --chown=greenlang:greenlang scripts/health_check.py /app/health_check.py

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD python /app/health_check.py || exit 1

# Use tini as entrypoint for proper signal handling
ENTRYPOINT ["/usr/bin/tini", "--"]

# Default command
CMD ["python", "-m", "greenlang.agent.server"]

# Metadata labels
LABEL maintainer="GreenLang DevOps Team" \
      version="1.0.0" \
      description="Base Docker image for GreenLang AI Agents" \
      org.opencontainers.image.source="https://github.com/greenlang/agent-foundation"