{{ define "email.greenlang.daily_summary" }}
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    h1 { color: #2E7D32; }
    h2 { color: #1976D2; margin-top: 20px; }
    table { border-collapse: collapse; width: 100%; margin-top: 10px; }
    th, td { border: 1px solid #ddd; padding: 12px; text-align: left; }
    th { background-color: #f5f5f5; }
    .critical { background-color: #FFCDD2; }
    .warning { background-color: #FFF9C4; }
    .info { background-color: #E3F2FD; }
    .resolved { background-color: #C8E6C9; }
    .footer { margin-top: 20px; color: #666; font-size: 12px; }
  </style>
</head>
<body>
  <h1>GreenLang Daily Alert Summary</h1>
  <p>Cluster: {{ .CommonLabels.cluster }}</p>
  <p>Report generated: {{ now.Format "2006-01-02 15:04:05 MST" }}</p>

  <h2>Alert Summary</h2>
  <p>Total Alerts: {{ .Alerts | len }} (Firing: {{ .Alerts.Firing | len }}, Resolved: {{ .Alerts.Resolved | len }})</p>

  {{ if .Alerts.Firing }}
  <h2>Currently Firing Alerts</h2>
  <table>
    <tr>
      <th>Alert</th>
      <th>Severity</th>
      <th>Service</th>
      <th>Started</th>
      <th>Summary</th>
    </tr>
    {{ range .Alerts.Firing }}
    <tr class="{{ .Labels.severity }}">
      <td>{{ .Labels.alertname }}</td>
      <td>{{ .Labels.severity }}</td>
      <td>{{ .Labels.service }}</td>
      <td>{{ .StartsAt.Format "2006-01-02 15:04:05" }}</td>
      <td>{{ .Annotations.summary }}</td>
    </tr>
    {{ end }}
  </table>
  {{ end }}

  {{ if .Alerts.Resolved }}
  <h2>Resolved Alerts (Last 24 Hours)</h2>
  <table>
    <tr>
      <th>Alert</th>
      <th>Severity</th>
      <th>Service</th>
      <th>Duration</th>
    </tr>
    {{ range .Alerts.Resolved }}
    <tr class="resolved">
      <td>{{ .Labels.alertname }}</td>
      <td>{{ .Labels.severity }}</td>
      <td>{{ .Labels.service }}</td>
      <td>{{ .StartsAt.Format "15:04" }} - {{ .EndsAt.Format "15:04" }}</td>
    </tr>
    {{ end }}
  </table>
  {{ end }}

  <div class="footer">
    <p>This is an automated message from GreenLang Alertmanager.</p>
    <p>View full dashboard: <a href="https://grafana.greenlang.io">Grafana</a></p>
  </div>
</body>
</html>
{{ end }}

