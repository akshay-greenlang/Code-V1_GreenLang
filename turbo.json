{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "PYTHON_VERSION",
    "DATABASE_URL",
    "REDIS_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "*.egg-info/**",
        "**/*.pyc",
        "**/__pycache__/**"
      ],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [
        "coverage/**",
        "htmlcov/**",
        ".coverage",
        "coverage.xml",
        "test-results/**"
      ],
      "cache": false
    },
    "test:unit": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "htmlcov/**"],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build", "^build"],
      "outputs": ["test-results/**"],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": [],
      "cache": false
    },
    "docker:build": {
      "dependsOn": ["build", "lint"],
      "outputs": [],
      "cache": false
    },
    "security:scan": {
      "outputs": ["security-reports/**"],
      "cache": true
    },
    "coverage": {
      "dependsOn": ["test"],
      "outputs": ["coverage/**", "htmlcov/**"],
      "cache": false
    }
  }
}
