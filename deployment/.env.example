# ============================================================================
# GreenLang Platform - Unified Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Shared Database (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_PASSWORD=greenlang_secure_2024_CHANGE_THIS
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ----------------------------------------------------------------------------
# Shared Redis Cache
# ----------------------------------------------------------------------------
REDIS_PASSWORD=greenlang_redis_2024_CHANGE_THIS

# ----------------------------------------------------------------------------
# RabbitMQ Message Queue
# ----------------------------------------------------------------------------
RABBITMQ_USER=greenlang
RABBITMQ_PASSWORD=greenlang_rabbit_2024_CHANGE_THIS

# ----------------------------------------------------------------------------
# Shared Security (JWT and Encryption)
# ----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
SHARED_SECRET_KEY=your_platform_secret_key_min_32_chars_CHANGE_THIS
SHARED_JWT_SECRET=your_jwt_secret_key_min_32_chars_CHANGE_THIS
CSRD_ENCRYPTION_KEY=your_csrd_encryption_key_CHANGE_THIS

# ----------------------------------------------------------------------------
# AI API Keys (Required for CSRD and VCCI)
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
PINECONE_API_KEY=your_pinecone_api_key

# ----------------------------------------------------------------------------
# CORS Settings
# ----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8001,http://localhost:8002

# ----------------------------------------------------------------------------
# Monitoring (Grafana)
# ----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=greenlang2024_CHANGE_THIS

# ----------------------------------------------------------------------------
# Database Admin (pgAdmin)
# ----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@greenlang.com
PGADMIN_PASSWORD=greenlang_admin_2024_CHANGE_THIS

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_TRACING=false

# ----------------------------------------------------------------------------
# Optional - External Services
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_smtp_password

# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
