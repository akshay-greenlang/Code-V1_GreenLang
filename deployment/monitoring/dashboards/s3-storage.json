    {
      "title": "Total Storage Size",
      "type": "stat",
      "datasource": "CloudWatch",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "dimensions": { "BucketName": ["greenlang-*"], "StorageType": ["StandardStorage"] },
          "metricName": "BucketSizeBytes",
          "namespace": "AWS/S3",
          "period": "86400",
          "statistics": ["Average"]
