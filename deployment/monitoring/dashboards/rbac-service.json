{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "enable": true,
        "expr": "ALERTS{alertname=~\"(HighAuthorizationDenialRate|LowCacheHitRate|HighPermissionEvaluationLatency|RoleChangeSpike|SystemRoleModificationAttempt|RBACServiceErrors).*\", alertstate=\"firing\"}",
        "iconColor": "red",
        "name": "RBAC Service Alerts",
        "step": "60s"
      }
    ]
  },
  "description": "GreenLang RBAC Authorization Layer - Authorization Decisions, Cache Performance, Role Management, Audit. PRD: SEC-002",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "external link",
      "includeVars": true,
      "keepTime": true,
      "tags": ["greenlang"],
      "targetBlank": true,
      "title": "GreenLang Dashboards",
      "type": "dashboards"
    }
  ],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "Authorization Overview",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Authorization decision rate split by allow and deny outcomes over time",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "decisions/sec",
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5,
            "stacking": { "mode": "none" }
          },
          "unit": "ops"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "allowed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "denied" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "id": 2,
      "options": {
        "legend": { "calcs": ["mean", "max", "lastNotNull"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(gl_rbac_authorization_total{result=\"allowed\", tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "allowed",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(gl_rbac_authorization_total{result=\"denied\", tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "denied",
          "refId": "B"
        }
      ],
      "title": "Authorization Decisions (Allow vs Deny)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Stacked bar chart of allow vs deny authorization decisions per minute",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "decisions/min",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "allowed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "denied" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "id": 3,
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(increase(gl_rbac_authorization_total{result=\"allowed\", tenant_id=~\"$tenant_id\"}[1m]))",
          "legendFormat": "allowed",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(increase(gl_rbac_authorization_total{result=\"denied\", tenant_id=~\"$tenant_id\"}[1m]))",
          "legendFormat": "denied",
          "refId": "B"
        }
      ],
      "title": "Authorization Decision Rate (per minute)",
      "type": "barchart"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Current RBAC cache hit rate as a percentage",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          },
          "min": 0,
          "max": 100,
          "unit": "percent"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "(sum(rate(gl_rbac_cache_hits_total{tenant_id=~\"$tenant_id\"}[5m])) / (sum(rate(gl_rbac_cache_hits_total{tenant_id=~\"$tenant_id\"}[5m])) + sum(rate(gl_rbac_cache_misses_total{tenant_id=~\"$tenant_id\"}[5m])))) * 100",
          "legendFormat": "Cache Hit Rate %",
          "refId": "A"
        }
      ],
      "title": "Cache Hit Rate",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 5,
      "title": "Performance",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Cache hits vs misses over time showing cache effectiveness trends",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "operations/sec",
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2,
            "stacking": { "mode": "none" }
          },
          "unit": "ops"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "hits" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "misses" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 10 },
      "id": 6,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(gl_rbac_cache_hits_total{tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "hits",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(gl_rbac_cache_misses_total{tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "misses",
          "refId": "B"
        }
      ],
      "title": "Cache Hit/Miss Over Time",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Permission evaluation latency at P50, P95, and P99 percentiles",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "latency",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.001 },
              { "color": "red", "value": 0.01 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 10 },
      "id": 7,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "histogram_quantile(0.50, sum(rate(gl_rbac_authorization_duration_seconds_bucket{tenant_id=~\"$tenant_id\"}[5m])) by (le))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "histogram_quantile(0.95, sum(rate(gl_rbac_authorization_duration_seconds_bucket{tenant_id=~\"$tenant_id\"}[5m])) by (le))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "histogram_quantile(0.99, sum(rate(gl_rbac_authorization_duration_seconds_bucket{tenant_id=~\"$tenant_id\"}[5m])) by (le))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "title": "Permission Evaluation Latency (P50/P95/P99)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Rate of cache invalidation events over time",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "invalidations/sec",
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5
          },
          "unit": "ops"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "role_change" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "assignment_change" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "manual" },
            "properties": [{ "id": "color", "value": { "fixedColor": "purple", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 10 },
      "id": 8,
      "options": {
        "legend": { "calcs": ["mean", "sum"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum by (reason) (rate(gl_rbac_cache_invalidations_total{tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "{{ reason }}",
          "refId": "A"
        }
      ],
      "title": "Cache Invalidation Events",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 9,
      "title": "Roles & Assignments",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Number of active roles by type (system vs custom) and tenant",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 19 },
      "id": 10,
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum by (role_type) (gl_rbac_roles_total{tenant_id=~\"$tenant_id\"})",
          "legendFormat": "{{ role_type }}",
          "refId": "A"
        }
      ],
      "title": "Active Roles",
      "type": "gauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Total number of active role assignments per tenant",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 2000 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 19 },
      "id": 11,
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum by (tenant_id) (gl_rbac_assignments_total{tenant_id=~\"$tenant_id\"})",
          "legendFormat": "{{ tenant_id }}",
          "refId": "A"
        }
      ],
      "title": "Active Assignments",
      "type": "gauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Role change events (create, update, delete) over time",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "changes",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "created" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "updated" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "deleted" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 19 },
      "id": 12,
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum by (action) (increase(gl_rbac_role_changes_total{tenant_id=~\"$tenant_id\"}[1h]))",
          "legendFormat": "{{ action }}",
          "refId": "A"
        }
      ],
      "title": "Role Changes Over Time",
      "type": "barchart"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Number of users assigned to each role",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "users",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 19 },
      "id": 13,
      "options": {
        "legend": { "calcs": [], "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum by (role_name) (gl_rbac_assignments_by_role{tenant_id=~\"$tenant_id\"})",
          "legendFormat": "{{ role_name }}",
          "refId": "A"
        }
      ],
      "title": "Assignments by Role",
      "type": "barchart"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "id": 14,
      "title": "Security & Audit",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Most frequently denied resource:action pairs in the last hour",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "custom": {
            "align": "auto",
            "displayMode": "color-background-solid"
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 28 },
      "id": 15,
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Value" }],
        "footer": { "show": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "topk(20, sum by (resource, action) (increase(gl_rbac_authorization_total{result=\"denied\", tenant_id=~\"$tenant_id\"}[1h])))",
          "legendFormat": "{{ resource }}:{{ action }}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "title": "Top Denied Permissions (1h)",
      "type": "table"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Distribution of authorization decisions by resource type",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": { "legend": false, "tooltip": false, "viz": false }
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 28 },
      "id": 16,
      "options": {
        "displayLabels": ["name", "percent"],
        "legend": { "displayMode": "table", "placement": "right", "values": ["value", "percent"] },
        "pieType": "donut",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum by (resource) (increase(gl_rbac_authorization_total{tenant_id=~\"$tenant_id\"}[1h]))",
          "legendFormat": "{{ resource }}",
          "refId": "A"
        }
      ],
      "title": "Authorization by Resource",
      "type": "piechart"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "RBAC audit log write rate and any failures",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "events/sec",
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2
          },
          "unit": "ops"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "success" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "failure" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 28 },
      "id": 17,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(gl_rbac_audit_events_total{result=\"success\", tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "success",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(gl_rbac_audit_events_total{result=\"failure\", tenant_id=~\"$tenant_id\"}[5m]))",
          "legendFormat": "failure",
          "refId": "B"
        }
      ],
      "title": "Audit Log Write Rate",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["greenlang", "rbac", "security", "sec-002"],
  "templating": {
    "list": [
      {
        "current": {
          "selected": false,
          "text": "Prometheus",
          "value": "prometheus"
        },
        "hide": 0,
        "includeAll": false,
        "label": "Datasource",
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "queryValue": "",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "type": "datasource"
      },
      {
        "current": {
          "selected": false,
          "text": "Loki",
          "value": "loki"
        },
        "hide": 0,
        "includeAll": false,
        "label": "Loki Datasource",
        "multi": false,
        "name": "loki_datasource",
        "options": [],
        "query": "loki",
        "refresh": 1,
        "type": "datasource"
      },
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "definition": "label_values(gl_rbac_authorization_total, tenant_id)",
        "hide": 0,
        "includeAll": true,
