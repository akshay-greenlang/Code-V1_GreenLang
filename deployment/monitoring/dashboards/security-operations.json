    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Mean Time to Detect security incidents",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 180 },
              { "color": "red", "value": 300 }
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "histogram_quantile(0.5, sum(rate(gl_secops_incident_mttd_seconds_bucket[1h])) by (le))",
          "legendFormat": "MTTD (P50)",
          "refId": "A"
        }
      ],
      "title": "MTTD (P50)",
