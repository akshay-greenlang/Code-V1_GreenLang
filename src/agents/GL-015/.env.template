# ==============================================================================
# GL-015 INSULSCAN - Environment Variables Template
# ==============================================================================
# Copy this file to .env and configure for your environment
# NEVER commit .env files with real credentials to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
APP_NAME=GL-015-INSULSCAN
APP_VERSION=1.0.0
APP_ENV=development
# Options: development, staging, production
DEBUG=false
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false
# Enable hot reload for development only

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
API_PREFIX=/api/v1
API_TITLE=GL-015 INSULSCAN API
API_DESCRIPTION=Insulation Inspection Agent with Thermal Image Processing
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# ------------------------------------------------------------------------------
# Security Settings
# ------------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=["http://localhost:3000","https://greenlang.io"]
CORS_ALLOW_CREDENTIALS=true

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://insulscan:password@localhost:5432/insulscan_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800
DATABASE_ECHO=false

# Individual database components (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=insulscan_db
DB_USER=insulscan
DB_PASSWORD=your-database-password

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# Cache TTL settings (seconds)
CACHE_TTL_DEFAULT=600
CACHE_TTL_THERMAL_ANALYSIS=1800
CACHE_TTL_HEAT_LOSS_CALC=3600

# ------------------------------------------------------------------------------
# Object Storage (S3/MinIO)
# ------------------------------------------------------------------------------
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1
S3_BUCKET_THERMAL_IMAGES=insulscan-thermal-images
S3_BUCKET_REPORTS=insulscan-reports
S3_PRESIGNED_URL_EXPIRY=3600

# ------------------------------------------------------------------------------
# Thermal Image Processing
# ------------------------------------------------------------------------------
# Maximum image dimensions (pixels)
MAX_IMAGE_WIDTH=4096
MAX_IMAGE_HEIGHT=4096
MAX_IMAGE_SIZE_MB=50

# Supported thermal image formats
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,tiff,bmp,raw

# Temperature calibration
EMISSIVITY_DEFAULT=0.95
AMBIENT_TEMPERATURE_C=25.0
REFLECTED_TEMPERATURE_C=25.0

# Processing settings
THERMAL_PROCESSING_BATCH_SIZE=10
THERMAL_PROCESSING_WORKERS=4
ENABLE_GPU_ACCELERATION=false
GPU_DEVICE_ID=0

# ------------------------------------------------------------------------------
# Heat Loss Calculation Settings
# ------------------------------------------------------------------------------
# Economic parameters
NATURAL_GAS_COST_PER_MMBTU=4.50
ELECTRICITY_COST_PER_KWH=0.10
STEAM_COST_PER_KLBS=12.00
OPERATING_HOURS_PER_YEAR=8760

# Calculation standards
CALCULATION_STANDARD=ASTM_C680
# Options: ASTM_C680, CINI, 3E_PLUS

# ------------------------------------------------------------------------------
# Monitoring & Observability
# ------------------------------------------------------------------------------
# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME=gl-015-insulscan
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1

# Logging
LOG_FORMAT=json
# Options: json, text
LOG_OUTPUT=stdout
# Options: stdout, file, both
LOG_FILE_PATH=/app/logs/insulscan.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# ------------------------------------------------------------------------------
# External Integrations
# ------------------------------------------------------------------------------
# CMMS Integration
CMMS_ENABLED=false
CMMS_API_URL=https://cmms.example.com/api
CMMS_API_KEY=your-cmms-api-key
CMMS_TIMEOUT=30

# Enterprise Integration Bus
EIB_ENABLED=false
EIB_BROKER_URL=amqp://guest:guest@localhost:5672/
EIB_EXCHANGE=greenlang.events
EIB_QUEUE=insulscan.commands

# GreenLang Agent Network
AGENT_NETWORK_ENABLED=true
AGENT_NETWORK_URL=http://agent-network:8080
AGENT_NETWORK_AUTH_TOKEN=your-network-token

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# ------------------------------------------------------------------------------
# Health Check Configuration
# ------------------------------------------------------------------------------
HEALTH_CHECK_INCLUDE_DETAILS=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_S3=true

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
FEATURE_CUI_DETECTION=true
FEATURE_AUTO_PRIORITIZATION=true
FEATURE_CMMS_INTEGRATION=false
FEATURE_REAL_TIME_ALERTS=true
FEATURE_BATCH_PROCESSING=true
