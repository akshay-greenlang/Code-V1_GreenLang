# GL-VCCI-Carbon-APP Environment Variables
# Copy this file to .env and fill in your values
#
# IMPORTANT: Never commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your values
#   source .env  # or use python-dotenv to load automatically

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
VCCI_ENVIRONMENT=production  # production | staging | development
VCCI_VERSION=1.0.0
VCCI_CONFIG_PATH=config/vcci_config.yaml
VCCI_OUTPUT_DIR=./output

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vcci_scope3
DATABASE_USER=vcci_admin
DATABASE_PASSWORD=changeme_strong_password_here

# Database replica (optional, for read scaling)
DATABASE_REPLICA_HOST=localhost
DATABASE_REPLICA_PORT=5432

# ============================================================================
# CACHE (Redis)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_DB=0
REDIS_URL=redis://:changeme_redis_password@localhost:6379/0

# ============================================================================
# VECTOR DATABASE (Weaviate)
# ============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=changeme_weaviate_api_key

# ============================================================================
# CLOUD STORAGE (S3-compatible)
# ============================================================================
S3_BUCKET=vcci-scope3-data
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=changeme_aws_access_key
AWS_SECRET_ACCESS_KEY=changeme_aws_secret_key
AWS_KMS_KEY_ID=  # Optional: KMS key for encryption

# ============================================================================
# LLM PROVIDERS
# ============================================================================
# Anthropic (Claude) - Primary provider for entity resolution
ANTHROPIC_API_KEY=changeme_anthropic_api_key

# OpenAI (GPT-4) - Alternative LLM provider
OPENAI_API_KEY=changeme_openai_api_key

# ============================================================================
# ERP SYSTEMS
# ============================================================================
# SAP S/4HANA
SAP_API_ENDPOINT=https://your-sap-instance.com/sap/opu/odata/sap
SAP_OAUTH_CLIENT_ID=changeme_sap_client_id
SAP_OAUTH_CLIENT_SECRET=changeme_sap_client_secret
SAP_OAUTH_TOKEN_URL=https://your-sap-instance.com/sap/bc/sec/oauth2/token

# Oracle ERP Cloud
ORACLE_API_ENDPOINT=https://your-oracle-instance.com
ORACLE_OAUTH_CLIENT_ID=changeme_oracle_client_id
ORACLE_OAUTH_CLIENT_SECRET=changeme_oracle_client_secret
ORACLE_OAUTH_TOKEN_URL=https://your-oracle-instance.com/oauth/token

# Workday
WORKDAY_API_ENDPOINT=https://wd2-impl-services1.workday.com
WORKDAY_OAUTH_CLIENT_ID=changeme_workday_client_id
WORKDAY_OAUTH_CLIENT_SECRET=changeme_workday_client_secret
WORKDAY_OAUTH_TOKEN_URL=https://your-workday-instance.com/oauth/token

# ============================================================================
# EMAIL SERVICE (SendGrid)
# ============================================================================
SENDGRID_API_KEY=changeme_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@vcci-platform.com
SENDGRID_FROM_NAME=VCCI Scope3 Platform

# ============================================================================
# DATA SOURCES & LICENSES
# ============================================================================
# Ecoinvent LCA Database (licensed, $60K/year)
ECOINVENT_LICENSE_KEY=changeme_ecoinvent_license_key

# Dun & Bradstreet API (optional, for DUNS number lookup)
DUNS_API_ENDPOINT=https://plus.dnb.com/v2
DUNS_API_KEY=changeme_duns_api_key

# ============================================================================
# SECRETS MANAGEMENT (HashiCorp Vault)
# ============================================================================
VAULT_ADDR=https://vault.your-domain.com:8200
VAULT_TOKEN=changeme_vault_token

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=changeme_jwt_secret_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=3600

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ============================================================================
# MONITORING & ALERTING
# ============================================================================
# PagerDuty
PAGERDUTY_API_KEY=changeme_pagerduty_api_key

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# MULTI-TENANCY
# ============================================================================
# Tenant-specific settings (if applicable)
TENANT_ID=default
COMPANY_NAME=Your Company Name
REPORT_FOOTER=Â© 2025 Your Company. All rights reserved.

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ENTITY_RESOLUTION=true
FEATURE_LLM_CATEGORIZATION=true
FEATURE_SUPPLIER_ENGAGEMENT=true
FEATURE_AUTOMATED_REPORTING=true
FEATURE_SCENARIO_MODELING=true
FEATURE_REAL_TIME_MONITORING=true

# Beta features (disabled by default)
FEATURE_BLOCKCHAIN_PROVENANCE=false
FEATURE_SATELLITE_MONITORING=false
FEATURE_MOBILE_APP=false

# ============================================================================
# DEVELOPMENT SETTINGS (Development/Staging only!)
# ============================================================================
# WARNING: NEVER enable these in production!
DEBUG=false
VERBOSE_LOGGING=false
HOT_RELOAD=false
MOCK_ERP_CONNECTIONS=false
MOCK_LLM_RESPONSES=false
DISABLE_AUTH=false  # NEVER enable in production!

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json  # json | text
LOG_DESTINATION=stdout  # stdout | file | cloudwatch

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
MAX_WORKERS=12  # Concurrent workers
BATCH_SIZE=10000  # Records per batch
CACHE_TTL_SECONDS=3600  # 1 hour
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_TIMEOUT=30

# ============================================================================
# COMPLIANCE & AUDIT
# ============================================================================
DATA_RETENTION_YEARS=7  # EU CSRD requirement
ENABLE_AUDIT_LOG=true
LOG_ALL_CALCULATIONS=true
LOG_ALL_API_CALLS=true
LOG_ALL_DATA_ACCESS=true

# ============================================================================
# BUDGET CONTROLS (LLM Usage)
# ============================================================================
MAX_LLM_TOKENS_PER_DAY=1000000  # 1M tokens/day
MAX_LLM_COST_PER_DAY_USD=100  # $100/day
LLM_ALERT_THRESHOLD=0.80  # Alert at 80% of limit

# ============================================================================
# PROVENANCE STORAGE
# ============================================================================
VCCI_PROVENANCE_BUCKET=vcci-scope3-provenance
VCCI_PROVENANCE_REGION=us-west-2
