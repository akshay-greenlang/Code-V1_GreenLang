# .coveragerc
[run]
branch = True
relative_files = True
source =
    greenlang
    # add other top-level pkgs if any (avoid tests, scripts)

[paths]
# Merge duplicate paths for the same package so coverage reports unify files
greenlang =
    greenlang
    core/greenlang
    */greenlang

[report]
exclude_lines =
    pragma: no cover
    if TYPE_CHECKING:
    if __name__ == .__main__.:
    raise NotImplementedError
    @abstractmethod
    @abstract
    except ImportError
    except ModuleNotFoundError
    pass
omit =
    tests/*
    */__init__.py
    **/conftest.py
    **/.venv/*
    **/.tox/*
    **/site-packages/*
    **/examples/*
    **/scripts/*
show_missing = True
fail_under = 85
skip_covered = False
precision = 2

[html]
directory = .coverage_html

[xml]
output = coverage.xml