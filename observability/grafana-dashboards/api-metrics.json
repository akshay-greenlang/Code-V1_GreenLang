{
  "dashboard": {
    "id": null,
    "uid": "greenlang-api-metrics",
    "title": "GreenLang API Metrics",
    "tags": ["greenlang", "api", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "type": "graph",
        "title": "API Request Rate by Endpoint",
        "targets": [
          {
            "expr": "sum(rate(gl_api_requests_total[5m])) by (endpoint, method)",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "API Latency by Endpoint (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_api_latency_seconds_bucket[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "API Latency Percentiles",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(gl_api_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_api_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(gl_api_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "type": "graph",
        "title": "HTTP Status Codes",
        "targets": [
          {
            "expr": "sum(rate(gl_api_requests_total[5m])) by (status_code)",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "graph",
        "title": "4xx Error Rate",
        "targets": [
          {
            "expr": "sum(rate(gl_api_requests_total{status_code=~'4..'}[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "graph",
        "title": "5xx Error Rate",
        "targets": [
          {
            "expr": "sum(rate(gl_api_requests_total{status_code=~'5..'}[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "type": "table",
        "title": "API Endpoint Performance Summary",
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(gl_api_requests_total[5m]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum by (le, endpoint) (rate(gl_api_latency_seconds_bucket[5m])))",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(gl_api_latency_seconds_bucket[5m])))",
            "format": "table",
            "instant": true,
            "refId": "C"
          },
          {
            "expr": "sum by (endpoint) (rate(gl_api_requests_total{status_code=~'[45]..'}[5m])) / sum by (endpoint) (rate(gl_api_requests_total[5m]))",
            "format": "table",
            "instant": true,
            "refId": "D"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {
                "endpoint": 0,
                "Value #A": 1,
                "Value #B": 2,
                "Value #C": 3,
                "Value #D": 4
              },
              "renameByName": {
                "endpoint": "Endpoint",
                "Value #A": "Rate (req/s)",
                "Value #B": "P50 (s)",
                "Value #C": "P95 (s)",
                "Value #D": "Error Rate"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 40},
        "type": "stat",
        "title": "Total Requests (1h)",
        "targets": [
          {
            "expr": "sum(increase(gl_api_requests_total[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 40},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(gl_api_requests_total{status_code=~'[45]..'}[5m])) / sum(rate(gl_api_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 40},
        "type": "stat",
        "title": "Avg Response Time",
        "targets": [
          {
            "expr": "avg(rate(gl_api_latency_seconds_sum[5m]) / rate(gl_api_latency_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "endpoint",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(gl_api_requests_total, endpoint)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "method",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(gl_api_requests_total, method)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
