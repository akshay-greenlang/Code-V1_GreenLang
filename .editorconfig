# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{bat,cmd}]
end_of_line = crlf

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{toml,ini}]
indent_style = space
indent_size = 4

[{LICENSE,CODEOWNERS}]
insert_final_newline = false