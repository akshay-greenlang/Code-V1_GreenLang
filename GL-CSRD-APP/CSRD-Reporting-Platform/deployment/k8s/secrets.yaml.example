# Example secrets file - DO NOT commit actual secrets to Git
# Copy this to secrets.yaml and fill in actual values
# Then apply with: kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: csrd-secrets
  namespace: production
type: Opaque
stringData:
  database-url: "postgresql://user:password@postgres-host:5432/csrd_db"
  redis-url: "redis://redis-host:6379/0"
  anthropic-api-key: "sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: csrd-config
  namespace: production
data:
  csrd_config.yaml: |
    # CSRD Application Configuration
    application:
      name: "GL-CSRD-APP"
      version: "1.0.0"
      environment: "production"

    pipeline:
      max_workers: 4
      timeout_seconds: 1800
      batch_size: 1000

    agents:
      core_pipeline:
        enabled: true
      greenlang_platform:
        enabled: true
      csrd_domain:
        enabled: true

    logging:
      level: "INFO"
      format: "json"
      output: "stdout"

    monitoring:
      prometheus:
        enabled: true
        port: 9090
      grafana:
        enabled: true
        port: 3000
