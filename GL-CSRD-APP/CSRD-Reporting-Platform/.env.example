# ============================================================================
# CSRD/ESRS PLATFORM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ----------------------------------------------------------------------------
# AI/LLM API KEYS
# ----------------------------------------------------------------------------

# OpenAI API Key (for materiality assessment and narrative generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Pinecone API Key (for vector database / RAG)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws

# ----------------------------------------------------------------------------
# DATABASE (Optional)
# ----------------------------------------------------------------------------

# PostgreSQL
DB_USERNAME=csrd_user
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=csrd_db

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------

# Environment: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Output directory
OUTPUT_DIR=output

# ----------------------------------------------------------------------------
# SECURITY & ENCRYPTION (CRITICAL)
# ----------------------------------------------------------------------------

# Secret key for JWT tokens and session management
SECRET_KEY=your-secret-key-here-change-in-production

# Encryption key for sensitive ESG data (REQUIRED)
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
# CRITICAL: Store this key securely! If lost, encrypted data cannot be recovered.
CSRD_ENCRYPTION_KEY=your-base64-encoded-encryption-key-here

# Enable encryption for sensitive data (RECOMMENDED: true)
ENCRYPT_SENSITIVE_DATA=true

# Key rotation settings
ENCRYPTION_KEY_ROTATION_DAYS=90
ENCRYPTION_KEY_GRACE_PERIOD_DAYS=30

# ----------------------------------------------------------------------------
# EMAIL NOTIFICATIONS (Optional)
# ----------------------------------------------------------------------------

# SMTP server for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password

# Notification email
NOTIFICATION_EMAIL=sustainability@yourcompany.com

# ----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# ----------------------------------------------------------------------------

# AWS S3 (for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=csrd-reports

# Azure Blob Storage (alternative)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=csrd-reports

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------

# Enable AI-powered materiality assessment
ENABLE_AI_MATERIALITY=true

# Enable AI-generated narratives
ENABLE_AI_NARRATIVES=true

# Enable XBRL generation
ENABLE_XBRL_GENERATION=true

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# ----------------------------------------------------------------------------
# PERFORMANCE TUNING
# ----------------------------------------------------------------------------

# Number of worker processes (for parallel processing)
WORKER_PROCESSES=4

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=500

# Request timeout (in seconds)
REQUEST_TIMEOUT=300

# ----------------------------------------------------------------------------
# DEBUGGING
# ----------------------------------------------------------------------------

# Enable debug mode (DO NOT use in production!)
DEBUG=false

# Enable SQL query logging
LOG_SQL_QUERIES=false

# Enable detailed error traces
DETAILED_ERROR_TRACES=true

# ----------------------------------------------------------------------------
# COMPANY DEFAULTS (Optional - can override in requests)
# ----------------------------------------------------------------------------

# Default company information for testing
DEFAULT_COMPANY_NAME=Demo Manufacturing GmbH
DEFAULT_LEI_CODE=529900DEMO00000000001
DEFAULT_REPORTING_YEAR=2024
DEFAULT_COMPANY_COUNTRY=DE
