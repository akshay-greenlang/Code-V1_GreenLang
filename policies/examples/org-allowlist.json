{
  "policy_name": "org-allowlist",
  "version": "1.0",
  "description": "Sample organization-based allowlist for default-deny policy demonstration",
  "type": "allowlist",
  "scope": "organization",
  "rules": {
    "allowed_organizations": [
      {
        "name": "GreenLang Foundation",
        "id": "greenlang-foundation",
        "trust_level": "official",
        "capabilities": ["*"]
      },
      {
        "name": "Climate Data Collective",
        "id": "climate-data-collective",
        "trust_level": "verified",
        "capabilities": ["data.read", "data.analyze"]
      },
      {
        "name": "Energy Efficiency Partners",
        "id": "energy-efficiency-partners",
        "trust_level": "trusted",
        "capabilities": ["compute.run", "data.read"]
      }
    ],
    "capability_mapping": {
      "official": ["*"],
      "verified": ["data.*", "compute.read"],
      "trusted": ["data.read", "compute.run"]
    },
    "default_action": "deny"
  },
  "enforcement": {
    "strict_mode": true,
    "capability_enforcement": true,
    "audit_access": true,
    "log_denials": true
  },
  "metadata": {
    "created_by": "greenlang-policy-engine",
    "created_at": "2024-09-23T00:00:00Z",
    "last_updated": "2024-09-23T00:00:00Z",
    "compliance_framework": "Week0-DoD-Security-Part1"
  }
}