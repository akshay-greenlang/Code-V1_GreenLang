{
  "policy_name": "region-allowlist",
  "version": "1.0",
  "description": "Sample region-based allowlist for default-deny policy demonstration",
  "type": "allowlist",
  "scope": "region",
  "rules": {
    "allowed_regions": [
      "us-east-1",
      "us-west-2",
      "eu-west-1",
      "ap-southeast-1"
    ],
    "denied_regions": [
      "*"
    ],
    "default_action": "deny",
    "exceptions": {
      "emergency_override": {
        "enabled": false,
        "require_approval": true,
        "audit_required": true
      }
    }
  },
  "enforcement": {
    "strict_mode": true,
    "log_violations": true,
    "block_on_violation": true
  },
  "metadata": {
    "created_by": "greenlang-policy-engine",
    "created_at": "2024-09-23T00:00:00Z",
    "last_updated": "2024-09-23T00:00:00Z",
    "compliance_framework": "Week0-DoD-Security-Part1"
  }
}