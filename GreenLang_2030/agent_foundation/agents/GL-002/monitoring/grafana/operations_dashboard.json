{
  "dashboard": {
    "title": "GL-002 Operations Dashboard - Health & Performance",
    "tags": ["gl-002", "operations", "health", "performance"],
    "timezone": "utc",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Uptime",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 3},
        "targets": [
          {
            "expr": "gl_002_system_uptime_seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 3600, "color": "yellow"},
                {"value": 86400, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 3},
        "targets": [
          {
            "expr": "sum(rate(gl_002_http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 10, "color": "green"},
                {"value": 50, "color": "yellow"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 3},
        "targets": [
          {
            "expr": "100 * sum(rate(gl_002_http_requests_total{status=\"error\"}[5m])) / sum(rate(gl_002_http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "title": "P95 Latency",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 3},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_002_http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "Request Latency Distribution",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 3, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(gl_002_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
            "refId": "A",
            "legendFormat": "p50 - {{endpoint}}"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_002_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
            "refId": "B",
            "legendFormat": "p95 - {{endpoint}}"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(gl_002_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
            "refId": "C",
            "legendFormat": "p99 - {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max", "last"]
          }
        }
      },
      {
        "id": 6,
        "title": "Request Rate by Endpoint",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 3, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(gl_002_http_requests_total[5m])) by (endpoint, method)",
            "refId": "A",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "stacking": {"mode": "normal"}
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 11, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "gl_002_system_cpu_usage_percent",
            "refId": "A",
            "legendFormat": "CPU Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 30
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "timeseries",
        "gridPos": {"x": 8, "y": 11, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "gl_002_system_memory_usage_bytes{type=\"rss\"} / 1024 / 1024",
            "refId": "A",
            "legendFormat": "RSS Memory"
          },
          {
            "expr": "gl_002_system_memory_usage_bytes{type=\"vms\"} / 1024 / 1024",
            "refId": "B",
            "legendFormat": "VMS Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "title": "Database Query Performance",
        "type": "timeseries",
        "gridPos": {"x": 16, "y": 11, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_002_db_query_duration_seconds_bucket[5m])) by (le, query_type))",
            "refId": "A",
            "legendFormat": "p95 - {{query_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 0.5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Database Connection Pool",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 17, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "gl_002_db_connection_pool_size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "External API Latency",
        "type": "timeseries",
        "gridPos": {"x": 6, "y": 17, "w": 9, "h": 5},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_002_external_api_duration_seconds_bucket[5m])) by (le, api_name))",
            "refId": "A",
            "legendFormat": "{{api_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 12,
        "title": "Error Breakdown",
        "type": "piechart",
        "gridPos": {"x": 15, "y": 17, "w": 9, "h": 5},
        "targets": [
          {
            "expr": "sum(rate(gl_002_db_query_errors_total[5m])) by (error_type)",
            "refId": "A",
            "legendFormat": "DB: {{error_type}}"
          },
          {
            "expr": "sum(rate(gl_002_external_api_errors_total[5m])) by (error_type)",
            "refId": "B",
            "legendFormat": "API: {{error_type}}"
          }
        ],
        "options": {
          "pieType": "pie",
          "displayLabels": ["name", "percent"],
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 13,
        "title": "Optimization Duration",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(gl_002_optimization_duration_seconds_bucket[5m])) by (le, strategy))",
            "refId": "A",
            "legendFormat": "p50 - {{strategy}}"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(gl_002_optimization_duration_seconds_bucket[5m])) by (le, strategy))",
            "refId": "B",
            "legendFormat": "p95 - {{strategy}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 14,
        "title": "Active Boilers Status",
        "type": "table",
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "gl_002_boiler_efficiency_percent",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "gl_002_boiler_load_percent",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "gl_002_emissions_compliance_status",
            "refId": "C",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge"
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "renameByName": {
                "boiler_id": "Boiler ID",
                "fuel_type": "Fuel Type",
                "Value #A": "Efficiency (%)",
                "Value #B": "Load (%)",
                "Value #C": "Compliant"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Efficiency (%)", "desc": true}]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Compliant"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-text",
                    "mode": "gradient"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "value": "0", "text": "NO", "color": "red"},
                    {"type": "value", "value": "1", "text": "YES", "color": "green"}
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "endpoint",
          "type": "query",
          "label": "Endpoint",
          "query": "label_values(gl_002_http_requests_total, endpoint)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Errors",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "rate(gl_002_http_requests_total{status=\"error\"}[1m]) > 0",
          "iconColor": "red"
        }
      ]
    }
  }
}
