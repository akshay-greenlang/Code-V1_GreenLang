# GL-003 SteamSystemAnalyzer - Production Dockerfile
# Multi-stage build for optimized, secure, production-ready container
# Image Size Target: < 500MB | Security: Non-root user | Layer Optimization

# =============================================================================
# Stage 1: Builder - Compile dependencies and prepare environment
# =============================================================================
FROM python:3.11-slim-bullseye AS builder

LABEL maintainer="GreenLang DevOps <devops@greenlang.io>"
LABEL description="GL-003 SteamSystemAnalyzer - Builder Stage"
LABEL version="1.0.0"

# Build arguments
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=1.0.0

# Set build-time environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBIAN_FRONTEND=noninteractive

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    libpq-dev \
    libssl-dev \
    libffi-dev \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements first for layer caching
COPY requirements.txt /tmp/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r /tmp/requirements.txt && \
    pip install --no-cache-dir gunicorn[gevent]==21.2.0

# =============================================================================
# Stage 2: Security Scanner - Scan for vulnerabilities
# =============================================================================
FROM builder AS security-scanner

# Install security scanning tools
RUN pip install --no-cache-dir bandit safety trivy

# Copy application code for scanning
COPY . /app
WORKDIR /app

# Run security scans
RUN bandit -r /app -ll -i || true && \
    safety check || true && \
    echo "Security scan completed"

# =============================================================================
# Stage 3: Runtime - Minimal production image
# =============================================================================
FROM python:3.11-slim-bullseye AS runtime

LABEL maintainer="GreenLang DevOps <devops@greenlang.io>"
LABEL description="GL-003 SteamSystemAnalyzer - Production Runtime"
LABEL version="${VERSION}"
LABEL org.opencontainers.image.created="${BUILD_DATE}"
LABEL org.opencontainers.image.revision="${VCS_REF}"
LABEL org.opencontainers.image.source="https://github.com/greenlang/Code-V1_GreenLang"
LABEL org.opencontainers.image.title="GL-003 SteamSystemAnalyzer"
LABEL org.opencontainers.image.description="AI-powered steam system analysis and optimization agent"

# Runtime environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PATH="/opt/venv/bin:$PATH" \
    DEBIAN_FRONTEND=noninteractive \
    ENVIRONMENT=production \
    PORT=8000

# Install only runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    libssl1.1 \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Create non-root user for security
RUN groupadd -r greenlang --gid=1000 && \
    useradd -r -g greenlang --uid=1000 --shell=/bin/bash --create-home greenlang && \
    mkdir -p /app /app/logs /app/data /app/cache && \
    chown -R greenlang:greenlang /app

# Switch to application directory
WORKDIR /app

# Copy application code
COPY --chown=greenlang:greenlang . /app/

# Create necessary directories
RUN mkdir -p \
    /app/logs \
    /app/data \
    /app/cache \
    /app/monitoring \
    && chown -R greenlang:greenlang /app

# Switch to non-root user
USER greenlang

# Expose application port
EXPOSE 8000

# Health check configuration
HEALTHCHECK --interval=30s \
            --timeout=10s \
            --start-period=40s \
            --retries=3 \
            CMD curl -f http://localhost:8000/api/v1/health || exit 1

# Volume mounts for persistent data
VOLUME ["/app/logs", "/app/data", "/app/cache"]

# Set entrypoint and default command
ENTRYPOINT ["python", "-m"]
CMD ["uvicorn", "steam_system_orchestrator:app", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--workers", "4", \
     "--log-level", "info", \
     "--access-log", \
     "--use-colors"]

# Metadata
ARG BUILD_VERSION=1.0.0
ENV APP_VERSION=${BUILD_VERSION}

# Runtime labels
LABEL com.greenlang.agent.id="GL-003"
LABEL com.greenlang.agent.name="SteamSystemAnalyzer"
LABEL com.greenlang.agent.version="${APP_VERSION}"
LABEL com.greenlang.deployment.environment="production"

