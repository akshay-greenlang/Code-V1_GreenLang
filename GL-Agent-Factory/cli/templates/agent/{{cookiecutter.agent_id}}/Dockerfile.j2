# {{ cookiecutter.agent_name }} Docker Image
# Auto-generated by GreenLang Agent Factory

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy agent code
COPY . .

# Create non-root user for security
RUN useradd -m -u 1000 agent && chown -R agent:agent /app
USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "from agent import {{ cookiecutter.agent_class_name }}; print('OK')" || exit 1

# Default command
CMD ["python", "agent.py"]

# Labels
LABEL org.opencontainers.image.title="{{ cookiecutter.agent_name }}" \
      org.opencontainers.image.description="{{ cookiecutter.description }}" \
      org.opencontainers.image.version="{{ cookiecutter.version }}" \
      org.opencontainers.image.vendor="GreenLang" \
      org.opencontainers.image.source="https://github.com/greenlang/agents"
