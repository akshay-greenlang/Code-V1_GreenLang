# Weaviate Configuration for GreenLang RAG

# Weaviate endpoint
WEAVIATE_ENDPOINT=http://localhost:8080

# Authentication (for production, enable API key)
WEAVIATE_API_KEY=

# Batch settings
WEAVIATE_BATCH_SIZE=100
WEAVIATE_BATCH_DYNAMIC=true

# Timeout settings (milliseconds)
WEAVIATE_TIMEOUT_CONFIG=30000
WEAVIATE_TIMEOUT_QUERY=10000
WEAVIATE_TIMEOUT_INSERT=60000

# Connection pool
WEAVIATE_CONNECTION_POOL_MAXSIZE=50

# Startup wait time (seconds)
WEAVIATE_STARTUP_PERIOD=30
